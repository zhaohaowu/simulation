<?xml version='1.0'?>

<launch>

  <!-- Load joint controller configurations from YAML file to parameter server -->
  <rosparam file="$(find sw5)/config/sw5.yaml" command="load"/>

  <!-- load the controllers -->
  <node name="controller_manager" pkg="controller_manager" type="spawner" respawn="false"
        output="screen" ns="/racecar" args=" left_front_wheel_velocity_controller right_front_wheel_velocity_controller
                                            left_steering_hinge_position_controller right_steering_hinge_position_controller
                                            joint_state_controller"/>

  <!-- convert joint states to TF transforms for rviz, etc -->
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" respawn="false" output="screen">
  <param name="publish_frequency" type="double" value="50.0" />
  </node>


  <!-- servo node -->
  <node pkg="sw5" type="servo_commands.py" name="servo_commands" output="screen">
  </node>

  <!-- Allow for Gazebo to broadcast odom -->
  <node pkg="sw5" name="gazebo_odometry_node" type="gazebo_odometry.py"/>
    
</launch>
